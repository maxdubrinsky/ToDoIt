<?xml version="1.0" encoding="UTF-8"?>
	<project name="ToDoIt" default="do-deploy" basedir="."  xmlns:fx="javafx:com.sun.javafx.tools.ant">
	<target name="init-fx-tasks">
		<path id="fxant">
			<filelist>
				<file name="${java.home}\..\lib\ant-javafx.jar"/>
				<file name="${java.home}\lib\jfxrt.jar"/>
				<file name="${basedir}"/>
			</filelist>
		</path>
	
		<taskdef resource="com/sun/javafx/tools/ant/antlib.xml"
			uri="javafx:com.sun.javafx.tools.ant"
			classpathref="fxant"/>
	</target>
	<target name="setup-staging-area">
		<delete dir="externalLibs" />
		<delete dir="project" />
		<delete dir="projectRefs" />
	
		<mkdir dir="externalLibs" />
	
		<copy todir="externalLibs">
			<fileset dir="/Users/maxdubrinsky/Desktop/ToDoIt/lib">
				<filename name="fluent-hc-4.4.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/maxdubrinsky/Desktop/ToDoIt/lib">
				<filename name="jna-4.1.0.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/maxdubrinsky/eclipse/plugins/org.junit_4.11.0.v201303080030">
				<filename name="junit.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/maxdubrinsky/Desktop/ToDoIt/lib">
				<filename name="commons-logging-1.2.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/maxdubrinsky/Desktop/ToDoIt/lib">
				<filename name="httpcore-4.4.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/maxdubrinsky/eclipse/plugins">
				<filename name="org.hamcrest.core_1.3.0.v201303031735.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/maxdubrinsky/Desktop/ToDoIt/lib">
				<filename name="httpclient-4.4.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/maxdubrinsky/Desktop/ToDoIt/lib">
				<filename name="org.json-20120521.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/maxdubrinsky/Desktop/ToDoIt/controlsfx">
				<filename name="openjfx-dialogs-1.0.2.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/maxdubrinsky/Desktop/ToDoIt/lib">
				<filename name="jna-platform-4.1.0.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/maxdubrinsky/Desktop/ToDoIt/lib">
				<filename name="httpclient-win-4.4.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/maxdubrinsky/Desktop/ToDoIt/controlsfx">
				<filename name="controlsfx-8.20.8.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/maxdubrinsky/Desktop/ToDoIt/lib">
				<filename name="commons-codec-1.9.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/maxdubrinsky/Desktop/ToDoIt/lib">
				<filename name="httpmime-4.4.jar"/>
			</fileset>
		</copy>
		<copy todir="externalLibs">
			<fileset dir="/Users/maxdubrinsky/Desktop/ToDoIt/lib">
				<filename name="httpclient-cache-4.4.jar"/>
			</fileset>
		</copy>
	
		<mkdir dir="project" />
		<copy todir="project">
			<fileset dir="/Users/maxdubrinsky/Desktop/ToDoIt">
				<include name="src/**" />
			</fileset>
		</copy>
	
		<mkdir dir="projectRefs" />
	</target>
	<target name='do-compile'>
		<delete dir="build" />
		<mkdir dir="build/src" />
		<mkdir dir="build/libs" />
		<mkdir dir="build/classes" />
	
		<!-- Copy project-libs references -->
		<copy todir="build/libs">
			<fileset dir="externalLibs">
				<include name="controlsfx-8.20.8.jar"/>
				<include name="org.hamcrest.core_1.3.0.v201303031735.jar"/>
				<include name="junit.jar"/>
				<include name="commons-logging-1.2.jar"/>
				<include name="fluent-hc-4.4.jar"/>
				<include name="org.json-20120521.jar"/>
				<include name="httpclient-cache-4.4.jar"/>
				<include name="httpmime-4.4.jar"/>
				<include name="commons-codec-1.9.jar"/>
				<include name="jna-4.1.0.jar"/>
				<include name="jna-platform-4.1.0.jar"/>
				<include name="openjfx-dialogs-1.0.2.jar"/>
				<include name="httpcore-4.4.jar"/>
				<include name="httpclient-win-4.4.jar"/>
				<include name="httpclient-4.4.jar"/>
			</fileset>
		</copy>
	
		<!-- Copy project references -->
	
		<!-- Copy project sources itself -->
		<copy todir="build/src">
			<fileset dir="project/src">
				<include name="**/*"/>
			</fileset>
		</copy>
	
		<javac includeantruntime="false" source="1.8" target="1.8" srcdir="build/src" destdir="build/classes" encoding="UTF-8">
			<classpath>
				<fileset dir="build/libs">
					<include name="*"/>
				</fileset>
			</classpath>
		</javac>
	
		<!-- Copy over none Java-Files -->
		<copy todir="build/classes">
		<fileset dir="project/src">
			<exclude name="**/*.java"/>
		</fileset>
		</copy>
	
	
	</target>
	<target name="do-deploy" depends="setup-staging-area, do-compile, init-fx-tasks">
		<delete file="dist"/>
		<delete file="deploy" />
	
		<mkdir dir="dist" />
		<mkdir dir="dist/libs" />
	
		<copy todir="dist/libs">
			<fileset dir="externalLibs">
				<include name="*" />
			</fileset>
		</copy>
	
		<mkdir dir="dist/resources" />
		<copy todir="dist/resources">
			<fileset dir="../resources" />
		</copy>
		
		<!-- Icons only for Windows -->
		<mkdir dir="package/windows" />
		<copy todir="package/windows">
			<fileset dir="..">
				<include name="ToDoIt.ico" />
				<include name="ToDoIt-logo-install.bmp" />
			</fileset>
		</copy>
		
		<!-- Icons only for MacOS -->
		<mkdir dir="package/macosx" />
		<copy todir="package/macosx">
		    <fileset dir="..">
		        <include name="ToDoIt.icns" />
		    </fileset>
		</copy>
		
		<fx:resources id="appRes">
			<fx:fileset dir="dist" includes="ToDoIt.jar"/>
			<fx:fileset dir="dist" includes="libs/*"/>
			<fx:fileset dir="dist" includes="resources/**"/>
		</fx:resources>
	
		<fx:application id="fxApplication"
			name="ToDoIt"
			mainClass="application.GUI"
			toolkit="fx"
		/>
	
		<mkdir dir="build/classes/META-INF" />
	
	
	
		<fx:jar destfile="dist/ToDoIt.jar">
			<fx:application refid="fxApplication"/>
			<fileset dir="build/classes">
			</fileset>
			<fx:resources refid="appRes"/>
	
			<manifest>
				<attribute name="Implementation-Vendor" value="BGM Development"/>
				<attribute name="Implementation-Title" value="ToDoIt"/>
				<attribute name="Implementation-Version" value="1.0"/>
				<attribute name="JavaFX-Feature-Proxy" value="None"/>
			</manifest>
		</fx:jar>
	
	
		<mkdir dir="deploy" />
		<!-- Need to use ${basedir} because somehow the ant task is calculating the directory differently -->
		<fx:deploy
			embedJNLP="false"
			extension="false"
			includeDT="false"
			offlineAllowed="true"
			outdir="${basedir}/deploy"
			outfile="ToDoIt" nativeBundles="all"
			updatemode="background" >
	
			<fx:platform basedir="${java.home}"/>
			<fx:info title="ToDoIt" vendor="BGM Development"/>
	
			<fx:application refId="fxApplication"/>
			<fx:resources refid="appRes"/>
		</fx:deploy>
	
	
	</target>
</project>
